<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Web Application Regression Suite" verbose="3" thread-count="5" parallel="tests">

<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
			<listener class-name="com.qa.opencart.listeners.TestAllureListener"></listener>
		</listeners>



    <test name="Login Page Test">
    <parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Accounts Page Test">
	 <parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Search Results Page Test">
	 <parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.SearchResultsTest" />
		</classes>
	</test>
	
	<test name="Shopping Cart Results Page Test">
	 <parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ShoppingCartPageTest" />
		</classes>
	</test> 
	
	<test name="Product Info Page Test">
	 <parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoTest" />
		</classes>
	</test>
	
		<test name="Register Page Test">
		 <parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test>



</suite>